#calculating gel electrophoresis
def gel_elecrophoresis(df):
    #sort proteins by mol weight
    df_sorted = df.sort_values(by='Molecular_Weight', ascending=False)

#create gel like visualization
def gel_electro_scatter(df):
    plt.figure(figsize=(8, 6))
    plt.scatter(df ['Molecular_Weight'], df['Intensity'], color='skyblue', alpha=0.7)
    plt.xlabel('Molecular Weight')
    plt.ylabel('Intensity')
    plt.title('Gel Electrophoresis Scatter Plot')
    plt.grid(True, linestyle='--', alpha=0.7)
    plt.tight_layout()
    plt.show()

    gel_electro_scatter(df)
